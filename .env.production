# Server Configuration
PORT=8080
NODE_ENV=production

# MongoDB Configuration
# Replace <username>, <password>, and <cluster-url> with your actual MongoDB Atlas values
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>.mongodb.net/medipass?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=medipass_jwt_secret_prod_2024
JWT_REFRESH_SECRET=medipass_jwt_refresh_secret_prod_2024
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# OTP Configuration
OTP_EXPIRY_MINUTES=5
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME_MINUTES=30

# Frontend URL (update this with your frontend URL after deployment)
FRONTEND_URL=https://medipass.vercel.app 