# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# Development: mongodb://localhost:27017/medipass
# Production: mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/medipass
MONGODB_URI=mongodb://localhost:27017/medipass

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_this_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# OTP Configuration
OTP_EXPIRY_MINUTES=5
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME_MINUTES=30

# Frontend URL (for password reset links, etc.)
FRONTEND_URL=http://localhost:3000 